{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.ts"]
    },
    "allowImportingTsExtensions": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}